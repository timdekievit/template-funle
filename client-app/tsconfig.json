{
    "compileOnSave": false,
    "compilerOptions": {
      "rootDir": ".",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "target": "es2015",
      "module": "esnext",
      "lib": ["es2019", "es2017", "dom"],
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@funle/ui": ["src/libs/ui/src/index.ts"],
        "@funle/ui/*": ["src/libs/ui/*/src/public_api.ts"],
        "@funle/entities": ["src/libs/entities/src/index.ts"],
        "@funle/entities/*": ["src/libs/entities/*/src/public_api.ts"],
        "@funle/forms": ["src/libs/forms/src/index.ts"],
        "@funle/forms/*": ["src/libs/forms/*/src/public_api.ts"],
        "@funle/ngrx": ["src/libs/ngrx/src/index.ts"],
        "@funle/ngrx/*": ["src/libs/ngrx/*/src/public_api.ts"],
        "@funle/api": ["src/libs/api/src/index.ts"]
      }
    },
    "exclude": ["node_modules", "tmp"]
  }